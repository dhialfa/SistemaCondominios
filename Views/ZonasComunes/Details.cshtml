@model SistemaCondominios.Models.ZonaComun

@{
    ViewData["Title"] = "Detalles de la Zona Común";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-info"><i class="fas fa-info-circle"></i> Detalles de la Zona Común</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<dl class="row">
    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.Nombre</dd>

    <dt class="col-sm-3">Descripción</dt>
    <dd class="col-sm-9">@Model.Descripcion</dd>

    <dt class="col-sm-3">Capacidad</dt>
    <dd class="col-sm-9">@Model.Capacidad</dd>

    <dt class="col-sm-3">Ubicación</dt>
    <dd class="col-sm-9">@Model.Ubicacion</dd>

    <dt class="col-sm-3">Estado</dt>
    <dd class="col-sm-9">
        @if (Model.EstaDisponible)
        {
            <span class="badge bg-success">Disponible</span>
        }
        else
        {
            <span class="badge bg-danger">No Disponible</span>
        }
    </dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.ZonaComunId" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>

