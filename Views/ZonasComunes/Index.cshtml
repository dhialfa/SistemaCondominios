@model IEnumerable<SistemaCondominios.Models.ZonaComun>

@{
    ViewData["Title"] = "Zonas Comunes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary"><i class="fas fa-swimming-pool"></i> Gestión de Zonas Comunes</h2>

    <a asp-controller="MainMenu" asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver al Menú Principal
    </a>
</div>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> Crear Nueva Zona Común
    </a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-primary">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Capacidad)</th>
            <th>@Html.DisplayNameFor(model => model.Ubicacion)</th>
            <th>@Html.DisplayNameFor(model => model.EstaDisponible)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Capacidad)</td>
                <td>@Html.DisplayFor(modelItem => item.Ubicacion)</td>
                <td>
                    @if (item.EstaDisponible)
                    {
                        <span class="badge bg-success">Disponible</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No Disponible</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.ZonaComunId" class="btn btn-sm btn-warning me-1">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.ZonaComunId" class="btn btn-sm btn-info text-white me-1">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ZonaComunId" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
