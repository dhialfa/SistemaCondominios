@model SistemaCondominios.Models.ZonaComun

@{
    ViewData["Title"] = "Eliminar Zona Común";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-danger"><i class="fas fa-trash-alt"></i> Eliminar Zona Común</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<div class="alert alert-warning">
    ¿Estás seguro de que deseas eliminar la siguiente zona común?
</div>

<dl class="row">
    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.Nombre</dd>

    <dt class="col-sm-3">Descripción</dt>
    <dd class="col-sm-9">@Model.Descripcion</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="ZonaComunId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
