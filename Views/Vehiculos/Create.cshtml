@model Vehiculo

@{
    ViewData["Title"] = "Agregar Vehículo";
}

<div class="container py-4">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white text-center">
            <h3><i class="fas fa-plus-circle me-2"></i> @ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Placa" class="form-label"></label>
                    <input asp-for="Placa" class="form-control" required />
                    <span asp-validation-for="Placa" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TipoPropietario" class="form-label"></label>
                    <input asp-for="TipoPropietario" class="form-control" />
                    <span asp-validation-for="TipoPropietario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NombrePropietario" class="form-label"></label>
                    <input asp-for="NombrePropietario" class="form-control" />
                    <span asp-validation-for="NombrePropietario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FechaAutorizacion" class="form-label"></label>
                    <input asp-for="FechaAutorizacion" class="form-control" type="date" />
                    <span asp-validation-for="FechaAutorizacion" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
