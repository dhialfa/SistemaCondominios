@model SistemaCondominios.Models.Usuario
@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de Usuario</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Nombre)</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Email)</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Password)</dt>
        <dd class="col-sm-10">********</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Telefono)</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Activo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Activo)</dd>

        <!-- NUEVO: Rol -->
        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Model.Rol?.Nombre</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.UsuarioId">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
