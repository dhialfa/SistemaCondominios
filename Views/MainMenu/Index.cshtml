@{
    ViewData["Title"] = "Menú Principal";
    var roles = ViewBag.Roles;
}

<div class="main-shell">
    <div class="container">
        <div class="card panel mx-auto" style="max-width: 1100px;">
            <div class="card-header panel-header text-center py-4">
                <h3 class="mb-1"><i class="fas fa-home me-2"></i> Menú Principal</h3>
                <p class="subtitle mb-0">Sistema de Administración de Condominios</p>
            </div>

            <div class="card-body">
                <div class="actions-grid">

                    @* Solo SuperAdministrador *@
                    @if (roles.IsAdmin)
                    {
                        <div>
                            <a asp-controller="Usuarios" asp-action="Index" class="tile">
                                <span class="icon primary"><i class="fas fa-users"></i></span>
                                <div>
                                    <div class="label">Usuarios</div>
                                    <p class="hint">Crea, edita y desactiva cuentas</p>
                                </div>
                            </a>
                        </div>

                        <div>
                            <a asp-controller="Roles" asp-action="Index" class="tile">
                                <span class="icon danger"><i class="fas fa-user-shield"></i></span>
                                <div>
                                    <div class="label">Roles</div>
                                    <p class="hint">Permisos y alcance por perfil</p>
                                </div>
                            </a>
                        </div>
                    }

                    @* SuperAdministrador y AdministradorCondominal *@
                    @if (roles.IsAdmin || roles.IsAdminCondominal)
                    {
                        <div>
                            <a asp-controller="Propietarios" asp-action="Index" class="tile">
                                <span class="icon dark"><i class="fas fa-user-tie"></i></span>
                                <div>
                                    <div class="label">Propietarios</div>
                                    <p class="hint">Gestión de información de propietarios</p>
                                </div>
                            </a>
                        </div>

                        <div>
                            <a asp-controller="ZonasComunes" asp-action="Index" class="tile">
                                <span class="icon success"><i class="fas fa-swimming-pool"></i></span>
                                <div>
                                    <div class="label">Zonas Comunes</div>
                                    <p class="hint">Alta de espacios y disponibilidad</p>
                                </div>
                            </a>
                        </div>
                    }

                    @* Condómino y roles superiores *@
                    @if (roles.IsAdmin || roles.IsAdminCondominal || roles.IsCondominal)
                    {
                        <div>
                            <a asp-controller="ReservasZonasComunes" asp-action="Index" class="tile">
                                <span class="icon success"><i class="fas fa-calendar-check"></i></span>
                                <div>
                                    <div class="label">Reservar Zona Común</div>
                                    <p class="hint">Agenda rápida Zonas Comunes</p>
                                </div>
                            </a>
                        </div>
                    }

                    @* Guarda y superiores *@
                    @if (roles.IsGuarda || roles.IsAdmin || roles.IsAdminCondominal || roles.IsCondominal)
                    {
                        <div>
                            <a asp-controller="Vehiculos" asp-action="Index" class="tile">
                                <span class="icon danger"><i class="fas fa-car"></i></span>
                                <div>
                                    <div class="label">Consultar Placa</div>
                                    <p class="hint">Verifica condómino, inquilino o visitante</p>
                                </div>
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
