@{
    ViewData["Title"] = "Menú Principal";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white text-center">
                <h3><i class="fas fa-home me-2"></i> Menú Principal</h3>
                <p class="mb-0 small">Sistema de Administración de Condominios</p>
            </div>
            <div class="card-body text-center">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-controller="Usuarios" asp-action="Index" class="btn btn-outline-primary w-100 py-3">
                            <i class="fas fa-users fa-2x mb-2"></i><br />
                            Usuarios
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Propietarios" asp-action="Index" class="btn btn-outline-dark w-100 py-3">
                            <i class="fas fa-user-tie fa-2x mb-2"></i><br />
                            Propietarios
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="ZonasComunes" asp-action="Index" class="btn btn-outline-success w-100 py-3">
                            <i class="fas fa-swimming-pool fa-2x mb-2"></i><br />
                            Zonas Comunes
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="ReservasZonasComunes" asp-action="Index" class="btn btn-outline-success w-100 py-3">
                            <i class="fas fa-calendar-check fa-2x mb-2"></i><br />
                            Reservar
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Ingresos" asp-action="Index" class="btn btn-outline-info w-100 py-3">
                            <i class="fas fa-dollar-sign fa-2x mb-2"></i><br />
                            Ingresos
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Reportes" asp-action="Index" class="btn btn-outline-warning w-100 py-3">
                            <i class="fas fa-chart-line fa-2x mb-2"></i><br />
                            Reportes
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Configuracion" asp-action="Index" class="btn btn-outline-secondary w-100 py-3">
                            <i class="fas fa-cogs fa-2x mb-2"></i><br />
                            Configuración
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
