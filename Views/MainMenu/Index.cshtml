@{
    ViewData["Title"] = "Menú Principal";
    var roles = ViewBag.Roles;
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white text-center">
                <h3><i class="fas fa-home me-2"></i> Menú Principal</h3>
                <p class="mb-0 small">Sistema de Administración de Condominios</p>
            </div>
            <div class="card-body text-center">
                <div class="row g-3">

                    @* Solo SuperAdministrador *@
                    @if (roles.IsAdmin)
                    {
                        <div class="col-md-4">
                            <a asp-controller="Usuarios" asp-action="Index" class="btn btn-outline-primary w-100 py-3">
                                <i class="fas fa-users fa-2x mb-2"></i><br />
                                Usuarios
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Roles" asp-action="Index" class="btn btn-outline-danger w-100 py-3">
                                <i class="fas fa-user-shield fa-2x mb-2"></i><br />
                                Roles
                            </a>
                        </div>
                    }

                    @* SuperAdministrador y AdministradorCondominal *@
                    @if (roles.IsAdmin || roles.IsAdminCondominal)
                    {
                        <div class="col-md-4">
                            <a asp-controller="Propietarios" asp-action="Index" class="btn btn-outline-dark w-100 py-3">
                                <i class="fas fa-user-tie fa-2x mb-2"></i><br />
                                Propietarios
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="ZonasComunes" asp-action="Index" class="btn btn-outline-success w-100 py-3">
                                <i class="fas fa-swimming-pool fa-2x mb-2"></i><br />
                                Zonas Comunes
                            </a>
                        </div>           
                    }

                    @* Condómino y roles superiores pueden reservar zonas comunes *@
                    @if (roles.IsAdmin || roles.IsAdminCondominal || roles.IsCondominal)
                    {
                        <div class="col-md-4">
                            <a asp-controller="ReservasZonasComunes" asp-action="Index" class="btn btn-outline-success w-100 py-3">
                                <i class="fas fa-calendar-check fa-2x mb-2"></i><br />
                                Reservar Zona Común
                            </a>
                        </div>
                    }

                    @* Guarda solamente puede ver Vehículos *@
                    @if (roles.IsGuarda || roles.IsAdmin || roles.IsAdminCondominal || roles.IsCondominal)
                    {
                        <div class="col-md-4">
                            <a asp-controller="Vehiculos" asp-action="Index" class="btn btn-outline-danger w-100 py-3">
                                <i class="fas fa-car fa-2x mb-2"></i><br />
                                Consultar Placa
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

