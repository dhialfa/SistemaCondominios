@model IEnumerable<SistemaCondominios.Models.ReservaZonaComun>

@{
    ViewData["Title"] = "Reservas de Zonas Comunes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary"><i class="fas fa-calendar-check"></i> Gestión de Reservas</h2>

    <a asp-controller="MainMenu" asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver al Menú Principal
    </a>
</div>

<!--Crear nueva reserva -->
<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> Nueva Reserva
    </a>
</p>

<!-- Tabla de reservas -->
<table class="table table-striped table-hover shadow-sm">
    <thead class="table-primary">
        <tr>
            <th>Propietario</th>
            <th>Zona Común</th>
            <th>Fecha</th>
            <th>Hora Inicio</th>
            <th>Hora Fin</th>
            <th>Estado</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Propietario.NombreCompleto</td>
                <td>@item.ZonaComun.Nombre</td>
                <td>@item.FechaReserva.ToString("dd/MM/yyyy")</td>
                <td>@item.HoraInicio.ToString(@"hh\:mm")</td>
                <td>@item.HoraFin.ToString(@"hh\:mm")</td>
                <td>
                    @if (item.Estado == "Confirmada")
                    {
                        <span class="badge bg-success">Confirmada</span>
                    }
                    else if (item.Estado == "Pendiente")
                    {
                        <span class="badge bg-warning text-dark">Pendiente</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Cancelada</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.ReservaId" class="btn btn-sm btn-warning me-1">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.ReservaId" class="btn btn-sm btn-info text-white me-1">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ReservaId" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
