@model SistemaCondominios.Models.ReservaZonaComun

@{
    ViewData["Title"] = "Eliminar Reserva";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-danger"><i class="fas fa-trash-alt"></i> Eliminar Reserva</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<div class="alert alert-warning">
    ¿Estás seguro de que deseas eliminar la siguiente reserva?
</div>

<dl class="row">
    <dt class="col-sm-3">Propietario</dt>
    <dd class="col-sm-9">@Model.Propietario?.NombreCompleto</dd>

    <dt class="col-sm-3">Zona Común</dt>
    <dd class="col-sm-9">@Model.ZonaComun?.Nombre</dd>

    <dt class="col-sm-3">Fecha</dt>
    <dd class="col-sm-9">@Model.FechaReserva.ToString("dd/MM/yyyy")</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="ReservaId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
