<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Condominios</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaCondominios.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Login" asp-action="Index">
                    <i class="fas fa-building"></i> SistemaCondominios
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("SuperAdministrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Roles" asp-action="Index">Roles</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Propietarios" asp-action="Index">Propietarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ZonasComunes" asp-action="Index">Zonas Comunes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ReservasZonasComunes" asp-action="Index">Reservas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Vehiculos" asp-action="Index">Vehículos</a>
                                </li>
                            }
                            else if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Propietarios" asp-action="Index">Propietarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ZonasComunes" asp-action="Index">Zonas Comunes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ReservasZonasComunes" asp-action="Index">Reservas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Vehiculos" asp-action="Index">Vehículos</a>
                                </li>
                            }
                            else if (User.IsInRole("Guarda"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Vehiculos" asp-action="Index">Vehículos</a>
                                </li>
                            }
                            else if (User.IsInRole("Propietario"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ReservasZonasComunes" asp-action="Index">Reservar Zona Común</a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-success">Bienvenido, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Login" asp-action="Logout">Cerrar Sesión</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Login" asp-action="Index">Iniciar Sesión</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="border-top text-center text-muted py-3">
        &copy; 2025 - SistemaCondominios
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

